<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h4><%= @user.name %>の<br>コーディネート</h4>
      <%#プロフィール欄%>
      <%= render 'users/profile', user: @user %>
    </div>

    <div class="col-md-10">
      <%= link_to "コーディネートを追加",new_user_coordinate_path(current_user) %><br>
      <%#コーディネート一覧%>
      <p>全<%= @coordinates.count %>件</p>
      <div class="coordinate">
      <% @coordinates.each do |coordinate| %>
      <div class="image">
        <table>
          <tr>
            <td>
              <%#いいねボタン%>
              <% if coordinate.favorited_by?(current_user) %>
                  <%= link_to user_coordinate_favorites_path(@user, coordinate), method: :delete do %>
                    <i class="fas fa-heart"></i>
                    <%= coordinate.favorites.count %> いいね
                  <% end %>
              <% else %>
                  <%= link_to user_coordinate_favorites_path(@user, coordinate), method: :post do %>
                    <i class="far fa-heart"></i>
                    <%= coordinate.favorites.count %> いいね
                  <% end %>
              <% end %>

            <%#コーディネート一覧表示%>
            <%= link_to user_coordinate_path(@user, coordinate) do %>
              <%= attachment_image_tag coordinate, :image, format: 'jpeg', size: "150x200" %>
            <% end %>
            </td>
          </tr>
        </table>
      </div>
      <% end %>
      </div>
      <%= paginate @coordinates %>
    </div>
  </div>
</div>