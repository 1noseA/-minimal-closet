<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h4><%= @user.name %>の<br>コーディネート</h4>
      <%#プロフィール欄%>
      <%= render 'users/profile', user: @user %>
    </div>

    <div class="col-md-10">
      <% if @user == current_user %>
        <%= link_to "コーディネートを追加",new_user_coordinate_path(current_user) %>
      <% end %>
        <%= link_to "アイテムを見る", user_path(@user) %><br>
        
      <%#コーディネート一覧%>
      <p>全<%= @coordinates.count %>件</p>
      <div class="coordinate">
      <% @coordinates.each do |coordinate| %>
      <div class="image">
        <table>
          <tr>
            <td>
              <%#いいねボタン%>
              <div id="favorites_buttons_<%= coordinate.id %>">
                <%= render partial: 'favorites/favorite', locals: {coordinate: coordinate} %>
              </div>

            <%#コーディネート一覧表示%>
            <%= link_to user_coordinate_path(@user, coordinate) do %>
              <%= attachment_image_tag coordinate, :image, format: 'jpeg', size: "150x200" %>
            <% end %>
            </td>
          </tr>
        </table>
      </div>
      <% end %>
      </div>
      <%= paginate @coordinates %>
    </div>
  </div>
</div>