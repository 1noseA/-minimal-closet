<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h4><%= @user.name %>の<br>コーディネート</h4>
      <table class="table">
      <%#プロフィール欄%>
      <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %><br>
        <tr>
          <td>名前</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>自己紹介</td>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
      <%= link_to "編集",edit_user_path(current_user), class: 'btn btn-edit' %>
    </div>

    <div class="col-md-10">
      <%= link_to "コーディネートを追加",new_coordinate_path %><br>
      <%#コーディネート一覧%>
      <p>全<%= @coordinates.count %>件</p>
      <div class="coordinate">
      <% @coordinates.each do |coordinate| %>
      <div class="image">
        <table>
          <tr>
            <td>
            <%= link_to coordinate_path(coordinate) do %>
              <%= attachment_image_tag coordinate, :image, format: 'jpeg', size: "150x200" %>
            <% end %>
            </td>
          </tr>
        </table>
      </div>
      <% end %>
      </div>
      <%= paginate @coordinates %>
    </div>
  </div>
</div>