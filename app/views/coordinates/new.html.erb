<div class="container">
  <div class="row">
    <div class="offset-2 col-md-4">
      <h4>コーディネート登録</h4>
    </div>
  </div>
  <div class="row">
    <div class="offset-2 col-md-4"> 
      <%= render partial: 'items/error', locals: {image: @coordinate} %>
      <%= form_for [@user, @coordinate] do |f| %>
        <p><%= attachment_image_tag @coordinate, :image, format: 'jpeg', fallback: "item_no_image.jpg", size: "300x400", id: "prev-img" %></p>
        <label for="post_img" class= "btn btn-add">
        <%= f.attachment_field :image, id: "post_img", class: "img_form" %>画像選択</label>
    </div>

    <div class="col-md-6">
        <span>メモ<p><%= f.text_area :text, class: "form", placeholder: "「お出かけコーデ」など" %></p></span>
        <p><%= f.submit "保存する", class: "btn btn-add" %></p>
      <% end %>
    </div>
  </div>
</div>