<div class="container">
  <h2>コーディネート登録</h2>
  <%= render partial: 'items/error', locals: {image: @coordinate} %>
    <%= form_for [@user, @coordinate] do |f| %>
      <div class="row">
        <div class="col-md-4">
          <%= attachment_image_tag @coordinate, :image, format: 'jpeg', fallback: "item_no_image.jpg", size: "300x400", id: "prev-img" %>
          <label for="post_img" class= "btn btn-img">
          <%= f.attachment_field :image, id: "post_img", class: "img_form" %>
          画像選択</label>
        </div>
        <div class="col-md-8">
          <p>説明<%= f.text_area :text %></p><br>
          <%= f.submit "保存",class: 'btn-new-coordinate'%>
        </div>
      </div>
    <% end %>     
</div>