<div class="container">
  <h2>コーディネート登録</h2>
    <%= form_for [@user, @coordinate] do |f| %>
      <div class="row">
        <div class="col-md-4">
          <%= f.attachment_field :image %>
        </div>
        <div class="col-md-8">
          <p>説明<%= f.text_area :text %></p><br>
          <%= f.submit "保存",class: 'btn-new-coordinate'%>
        </div>
      </div>
    <% end %>     
</div>