<div class="container coordinate-page">
  <div class="row">
    <div class="offset-2 col-md-4 coordinate-box">
      <%= attachment_image_tag @coordinate, :image, format: 'jpeg', size: "300x400",class: "img-fluid" %>
    </div>

    <div class="col-md-6 text-box">
      <span>メモ<%= simple_format(@coordinate.text) %></span><br>
    
    <%#いいねボタン%>
      <p><div id="favorites_buttons_<%= @coordinate.id %>">
        <%= render partial: 'favorites/favorite', locals: {coordinate: @coordinate} %>
        </div></p><br>

      <% if @user == current_user %>
        <p><%= link_to "編集する",edit_user_coordinate_path(current_user,@coordinate),class: "btn btn-change" %>
          
        <%= link_to "削除する",user_coordinate_path(current_user,@coordinate),method: :delete, class: "btn btn-delete" %></p>
      <% end %>

      <p><%= link_to "戻る",user_coordinates_path(@user), class: "btn btn-move" %></p>
    </div>
  </div>
</div>