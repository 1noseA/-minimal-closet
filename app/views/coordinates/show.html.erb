<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= attachment_image_tag @coordinate, :image, format: 'jpeg', size: "300x400" %>
    </div>

    <div class="col-md-8">
      <p>説明<%= @coordinate.text %></p><br>

      <%#いいねボタン%>
        <div id="favorites_buttons_<%= @coordinate.id %>">
          <%= render partial: 'favorites/favorite', locals: {coordinate: @coordinate} %>
        </div>

      <%= link_to "編集",edit_user_coordinate_path(current_user,@coordinate),class: 'btn btn-edit' %>
        
      <%= link_to "削除",user_coordinate_path(current_user,@coordinate),method: :delete, class: 'btn btn-delete' %><br>

      <%= link_to "戻る",user_coordinates_path(@user), class: 'btn btn-back' %><br>
    </div>
  </div>
</div>