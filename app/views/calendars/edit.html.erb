<div class="container">
  <div class="row">
    <div class="offset-2 col-md-4">
      <h4>カレンダー記録の編集</h4>
    </div>
  </div>
  <div class="row">
    <div class="offset-2 col-md-4"> 
      <%= render partial: 'items/error', locals: {image: @calendar} %>
      <%= form_for [current_user,@calendar] do |f| %>
        <p><%= attachment_image_tag @calendar, :day_image, format: 'jpeg', fallback: "item_no_image.jpg", size: "300x400", id: "prev-img" %></p>
        <label for="post_img" class= "btn btn-change">
        <%= f.attachment_field :day_image, id: "post_img", class: "img_form" %>画像選択</label>
    </div>

    <div class="col-md-6">
        <p><%= f.datetime_select :start_time %></p>

        <p><%= f.text_area :text, class: "day_form", placeholder: "「◯◯さんとランチに行った」など" %></p>

        <%= f.submit "変更を更新する",class: "btn btn-change" %>
      <% end %>
    </div>
  </div>
</div>   