<div class="container">
  <div class="row">
    <div class="col-12 mx-auto mb-5">
    <%= link_to "コーディネートを保存する", new_user_calendar_path(current_user),class: "btn btn-add" %>

    <%= month_calendar events: @calendars do |date, calendars| %>
      <%= date.day %>

      <% calendars.each do |calendar| %>
          <%= link_to user_calendar_path(current_user,calendar) do %>
            <%= attachment_image_tag calendar, :day_image, format: 'jpeg', size: "150x200" %>
          <% end %>
      <% end %>
    <% end %>
    </div>
  </div>
</div>