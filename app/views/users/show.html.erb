<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h4><%= @user.name %>の<br>クローゼット</h4>
      <table class="table">
      <%#プロフィール欄%>
      <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %><br>
        <tr>
          <td>名前</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>自己紹介</td>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
      <%= link_to "編集",edit_user_path(current_user), class: 'btn btn-edit' %>
    </div>

    <div class="col-md-10">
    <%= link_to "アイテムを追加",new_item_path %><br>
      <%#アイテム一覧%>
    <% @items.each do |item| %>
      <%= link_to item_path(item) do %>
        <%= attachment_image_tag item, :item_image, format: 'jpeg', fallback: "item_no_image.jpg", size: "300x400" %>
      <% end %>

      <%#いいねボタン%>
    <% end %>
    </div>
  </div>
</div>