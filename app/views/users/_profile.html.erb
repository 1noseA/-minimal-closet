<table class="table">
  <tr><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %></tr>
  <tr>
    <td>ニックネーム</td>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <td>自己紹介</td>
    <td><%= user.introduction %></td>
  </tr>
  <tr>
    <td>フォロー</td>
    <td><%= link_to user.follower.count, user_follows_path(user) %></td>
  </tr>
  <tr>
    <td>フォロワー</td>
    <td><%= link_to user.followed.count, user_followers_path(user) %></td>
  </tr>
</table>

<!-- フォローボタン -->
<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-change" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :POST, class: "btn btn-add" %>
  <% end %>
<% end %>

<% if user == current_user %>
  <%= link_to "編集する",edit_user_path(current_user), class: "btn btn-change" %>
<% end %>