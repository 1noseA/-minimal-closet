<div class="container"> 
  <div class="row">
    <div class="col-md-2">
      <h4><%= @user.name %>の<br>クローゼット</h4>
      <table class="table">
      <%#プロフィール欄%>
        <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %><br>
        <tr>
          <td>名前</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>自己紹介</td>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
      <%= link_to "編集",edit_user_path(current_user), class: 'btn btn-edit' %>
    </div>

    <div class="col-md-10">
    <h2>いろいろなクローゼットを見る</h2>
    <span>全<%= @count.count %>件</span>
      <table class="table">
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user) do %>
                <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %><br>
              <%= user.name %>
              </td>
              <td>
              <% user.items.first(5).each do |item| %>
                <%= link_to item_path(item) do %>
                  <%= attachment_image_tag item, :item_image, :fill, 100, 100, format: 'jpeg', fallback: "item_no_image.jpg",size:'150x200' %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
      <%= paginate @users, class: "paginate" %>
    </div>
  </div>
</div>