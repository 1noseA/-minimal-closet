<div class="container"> 
  <div class="row">
  <div class="col-md-2">
      <h4><%= @user.name %>の<br>クローゼット</h4>
      <table class="table">
      <%#プロフィール欄%>
        <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %><br>
        <tr>
          <td>名前</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>自己紹介</td>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
      <%= link_to "編集",edit_user_path(current_user), class: 'btn btn-edit' %>
    </div>

    <div class="col-md-10">
    <h2>いろいろなクローゼットを見る</h2>
    <span>全件</span>
      <table class="table">
        <thead>
          <tr>
            <th>名前</th>
            <th>クローゼットの中</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
              <%= user.name %>
            </td>
            <td></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>