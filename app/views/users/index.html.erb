<div class="container"> 
  <div class="row">
    <div class="col-md-10 mx-auto mb-5">
    <h2>みんなのクローゼットを見る</h2>
    <p>全<%= @count.count %>件</p>
      <table class="table">
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user) do %>
                <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "profile_img", fallback: "no_image.jpg" %>
              <% end %><br>
              <p><%= user.name %></p>
              </td>
              <td>
              <% user.items.first(5).each do |item| %>
                <%= link_to item_path(item) do %>
                  <%= attachment_image_tag item, :item_image,  format: 'jpeg', fallback: "item_no_image.jpg",size:"150x200",class: "img-fluid" %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
      <%= paginate @users, class: "paginate" %>
    </div>
  </div>
</div>