<% if coordinate.favorited_by?(current_user) %>
  <%= link_to user_coordinate_favorites_path(@user, coordinate), method: :delete, remote: true do %>
    <i class="fas fa-heart"></i>
    <%= coordinate.favorites.count %>
  <% end %>
<% else %>
  <%= link_to user_coordinate_favorites_path(@user, coordinate), method: :post, remote: true do %>
    <i class="far fa-heart"></i>
    <%= coordinate.favorites.count %>
  <% end %>
<% end %>